<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.zappby.tolietfinder.MainActivity">





            <EditText
                android:layout_margin="10dp"
                android:id="@+id/location_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Toilet Location Area Name"/>

            <EditText
                android:layout_margin="10dp"
                android:id="@+id/location_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Location Address"/>

            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Rate Toilet In hygiene meter:"/>
            <Spinner
                android:layout_margin="10dp"
                android:id="@+id/hygeneMeter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/hygiene_meter" />
            <Button
                android:layout_margin="10dp"
                android:id="@+id/sendTodB"
                android:layout_width="match_parent"
                android:text="send"
                android:layout_height="wrap_content" />



</LinearLayout>
